<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hauglidtech.converter.Homescreen">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/activity_margin"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearLayout">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cv1"
            app:cardUseCompatPadding="true"
            android:onClick="openLayout1"
            >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin"
                    android:id="@+id/layout1_photo"
                    android:src="@drawable/ic_format_align_center_white_48dp"
                    />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cv2"
            app:cardUseCompatPadding="true"
            android:onClick="openLayout2"
            >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout2_photo"
                    android:padding="@dimen/activity_margin"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_reorder_white_48dp"
                    />

        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>
